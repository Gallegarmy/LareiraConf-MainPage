---
import Header from "@components/Others/Header.astro";
import Footer from "@components/Others/Footer.astro";
import "../styles/landing-26/global.css";
import "../styles/landing-26/torch-effect.css";
import "../styles/landing-26/lareira.css";

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      property="og:title"
      content="LareiraConf. El encuentro tech que enciende ideas y conecta comunidades"
    />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="images/1500x500.jpg" />
    <meta property="og:url" content="https://x.com/LareiraConf" />
    <meta
      property="og:description"
      content="El evento tech en A Coruña donde la comunidad se reúne para aprender, inspirarse y conectar. ¡Forma parte de esta experiencia!"
    />
    <meta property="og:site_name" content="LareiraConf" />
    <meta property="og:logo" content="images/L-2O7YyK_400x400.jpg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body class="dark font-mono" data-theme="dark">
    <div class="torch-cursor dark-cave">
      <div class="torch-light"></div>
      <div class="unlit-torch"></div>
      <main class="content-mask">
        <slot />
        <Footer />
      </main>
    </div>
  </body>
</html>

<script is:inline>
  const isTouchDevice =
    "ontouchstart" in window || navigator.maxTouchPoints > 0;
  const torchContainer = document.querySelector(".dark-cave");
  const torchLight = document.querySelector(".torch-light");
  const contentToMask = document.querySelector(".content-mask");
  const unlitTorch = document.querySelector(".unlit-torch");
  let isTorchLit = false;

  function updateTorch(x, y) {
    if (torchLight && contentToMask) {
      torchLight.style.left = x + "px";
      torchLight.style.top = y + "px";
      torchLight.style.opacity = 1;
      torchLight.classList.add("is-lit");

      const maskX = (x / window.innerWidth) * 100;
      const maskY = (y / window.innerHeight) * 100;
      const lightRadius = Math.min(window.innerWidth, window.innerHeight) * 0.3;

      const maskStyle = `radial-gradient(circle ${lightRadius}px at ${maskX}% ${maskY}%,
        black 10%, rgba(0,0,0,0.95) 20%, rgba(0,0,0,0.7) 40%, rgba(0,0,0,0.3) 60%, transparent 80%)`;

      contentToMask.style.mask = maskStyle;
      contentToMask.style.webkitMask = maskStyle;
    }
  }

  function hideTorch() {
    if (torchLight) {
      torchLight.style.opacity = 0;
      torchLight.classList.remove("is-lit");
    }
    const hideMask =
      "radial-gradient(circle 0px at 50% 50%, transparent 0%, transparent 100%)";
    if (contentToMask) {
      contentToMask.style.mask = hideMask;
      contentToMask.style.webkitMask = hideMask;
    }
  }

  if (isTouchDevice) {
    if (unlitTorch) unlitTorch.style.display = "block";
    hideTorch(); // Oculta el contenido al cargar en móvil

    torchContainer.addEventListener(
      "touchstart",
      function (e) {
        if (!isTorchLit) {
          if (unlitTorch) unlitTorch.style.display = "none";
          isTorchLit = true;
        }
        const touch = e.touches[0];
        updateTorch(touch.clientX, touch.clientY);
      },
      { passive: true },
    );

    torchContainer.addEventListener(
      "touchmove",
      function (e) {
        if (isTorchLit) {
          const touch = e.touches[0];
          updateTorch(touch.clientX, touch.clientY);
        }
      },
      { passive: true },
    );
  } else {
    if (unlitTorch) unlitTorch.style.display = "none";

    document.addEventListener("mousemove", function (e) {
      updateTorch(e.clientX, e.clientY);
    });

    document.addEventListener("mouseleave", function () {
      hideTorch();
    });
  }
</script>

<style>
  body {
    position: relative; /* Ensure it's a positioning context for children */
  }
  .dark-cave {
    width: 100%;
  }
  main {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
</style>
