---
import { speakers } from "../components/Speakers/speakers-data";
import coverIllustration from "../img/parallax/lareira.png";
import SpeakerBookPage from "../components/Speakers/SpeakerBookPage.astro";
import "../styles/global.css";

const speakerLeaves = speakers.map((speaker, index) => ({
  speaker,
  pageIndex: index + 2,
}));

const pageCount = speakerLeaves.length + 2;
const pageScroll = Math.max(pageCount - 1, 1);
const backCoverIndex = speakerLeaves.length + 2;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Speakers Book Preview</title>
    <script
      src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"
      is:inline></script>
    <script
      src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"
      is:inline></script>
  </head>
  <body
    class="speakers-preview-page"
    style={`--page-count: ${pageCount}; --page-scroll: ${pageScroll};`}
  >
    <div class="book" role="presentation">
      <div class="book__spine"></div>
      <div
        class="page book__page book__cover book__cover--front"
        style="--page-index: 1;"
      >
        <div class="page__half page__half--front">
          <div class="page-content cover-content cover-content--front">
            <img
              src={coverIllustration.src}
              alt="Ilustración da lareira"
              class="cover-illustration"
              loading="lazy"
              decoding="async"
            />
            <h2 class="cover-title">Portadores de la llama</h2>
            <p class="cover-note">
              Descubre a los ponentes que encenderán la Lareira Conf '26 con sus
              ideas.
            </p>
          </div>
        </div>
        <div class="page__half page__half--back">
          <div class="book__insert"></div>
          <div class="page-content cover-content cover-content--inside"></div>
        </div>
      </div>

      {speakerLeaves.map((speakerData) => <SpeakerBookPage {...speakerData} />)}

      <div
        class="page book__page book__cover book__cover--back"
        style={`--page-index: ${backCoverIndex};`}
      >
        <div class="page__half page__half--front">
          <div class="page-content cover-content cover-content--closing"></div>
        </div>
        <div class="page__half page__half--back">
          <div class="book__insert"></div>
        </div>
      </div>
    </div>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html,
  body {
    width: 100vw;
    height: calc((var(--page-count) * 100) * 1vh);
    background: transparent;
    background-color: transparent;
    color: var(--text-secondary);
    font-family: var(--heading-font);
    overflow-x: hidden;
  }

  .page {
    height: 100%;
    width: 100%;
    position: relative;
    transform-style: preserve-3d;
  }

  .page .page__number {
    position: absolute;
    bottom: 1.25rem;
    font-size: 1.4vmin;
    color: var(--secondary);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .page__half--front .page__number {
    right: 1.5rem;
  }

  .page__half--back .page__number {
    left: 1.5rem;
  }

  .page__half {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    transform: rotateY(calc(var(--rotation) * 1deg))
      translate3d(0, 0, calc((0.5 * var(--coefficient)) * 1px));
    -webkit-clip-path: inset(0 0.5% 0 0.5%);
    clip-path: inset(0 0.5% 0 0.5%);
    padding: clamp(1.5rem, 4vmin, 3rem);
  }

  .page__half--front {
    --rotation: 0;
    --coefficient: 0;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }

  .page__half--back {
    --rotation: 180;
    --coefficient: 2;
  }

  .book {
    height: 80vmin;
    position: fixed;
    width: 56vmin;
    min-width: 220px;
    min-height: 310px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.42);
    transform-style: preserve-3d;
    perspective: 2000px;
    will-change: transform;
  }

  .book__insert {
    content: "";
    position: absolute;
    height: 94%;
    width: 94%;
    background: var(--color-brown-light);
    top: 50%;
    right: -1rem;
    transform: translate(0, -50%);
  }

  .book__spine {
    height: 100%;
    left: 0;
    top: 0;
    position: absolute;
    background: var(--color-brown-dark);
    transform-origin: 0 50%;
    width: 12px;
    transform: translate3d(0, 0, -13px) scaleX(1) rotateY(0deg);
  }

  .book__page {
    position: absolute;
    left: 2%;
    top: 50%;
    transform: translate(0, -50%);
    height: 94%;
    width: 94%;
    z-index: calc(((var(--page-count) + 2) - var(--page-index)) * 2);
    transform-origin: 0% 50%;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    transform-style: preserve-3d;
  }

  .book__cover {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 50%;
    left: 0;
    background: var(--color-brown-dark);
  }

  .book__cover--front {
    transform-origin: 0 50%;
  }

  .book__cover--front .page__half--back {
    border-right: 1rem solid var(--color-brown-dark);
  }

  .book__cover--back {
    transform-origin: 0% 50%;
  }

  .book__cover--back .page__half--front {
    border-left: 1rem solid var(--color-brown-dark);
  }

  .book__cover--back .book__insert {
    left: 0;
  }

  .book__page:not(.book__cover) .page__half {
    background: #fef8e8;
  }
  .page-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: clamp(0.75rem, 2vmin, 1.5rem);
  }

  .cover-content {
    align-items: center;
    justify-content: center;
    text-align: center;
    color: var(--text-light);
  }

  .cover-content--front {
    gap: 1.5rem;
  }

  .cover-illustration {
    display: block;
    width: clamp(140px, 28vmin, 260px);
    image-rendering: pixelated;
    aspect-ratio: 1 / 1;
    object-fit: contain;
    filter: drop-shadow(0 8px 0 rgba(0, 0, 0, 0.25));
  }

  .cover-content--inside,
  .cover-content--closing {
    color: var(--text-secondary);
    text-align: left;
    font-size: clamp(1.1rem, 2.4vmin, 1.3rem);
    line-height: 1.6;
  }

  .cover-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.32em;
    font-size: clamp(0.85rem, 1.6vmin, 1.1rem);
    opacity: 0.85;
  }

  .cover-title {
    font-size: clamp(2.4rem, 7vmin, 4.5rem);
    margin: 0;
  }

  .cover-subtitle {
    font-size: clamp(1.2rem, 3vmin, 1.7rem);
    margin: 0;
    color: var(--text-light);
  }

  .cover-note {
    margin: 0;
    max-width: 30ch;
    font-size: clamp(1.1rem, 2.4vmin, 1.3rem);
  }

  .speaker-page {
    height: 100%;
  }

  .speaker-page--complete {
    display: flex;
    flex-direction: column;
    gap: clamp(0.75rem, 2vmin, 1.25rem);
    align-items: center;
  }

  .speaker-page--framed {
    box-sizing: border-box;
    position: relative;
    padding: clamp(1.5rem, 3vmin, 2rem);
  }

  .speaker-page--framed .corner-flourish {
    position: absolute;
  }

  .speaker-page__portrait {
    margin: 0;
    flex-shrink: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: clamp(0.75rem, 2vmin, 1.25rem);
  }

  .speaker-page__portrait img {
    display: block;
    width: clamp(120px, 24vmin, 300px);
    height: clamp(150px, 24vmin, 300px);
    object-fit: contain;
  }

  .speaker-page__identity {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
  }

  .speaker-page__name {
    margin: 0;
    font-size: clamp(2rem, 5vmin, 3rem);
    color: var(--accent);
    letter-spacing: var(--custom-letter-spacing);
    text-transform: uppercase;
    line-height: 1.2;
    font-weight: 700;
  }

  .speaker-page__role {
    margin: 0;
    font-size: 1rem;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
    line-height: 1.4rem;
    text-transform: uppercase;
    font-weight: 600;
  }

  .speaker-page__info {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: clamp(0.75rem, 2vmin, 1.25rem);
    min-width: 0;

    .speaker-page__bio {
      margin: 0;
      font-size: 1.1rem;
      letter-spacing: var(--custom-letter-spacing);
      line-height: 1.1rem;
      color: var(--text-primary);
      text-align: left;
    }

    .speaker-page__socials {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: center;
    }

    .speaker-page__socials a {
      color: var(--primary);
      text-decoration: none;
      font-weight: 600;
      font-size: clamp(0.85rem, 1.8vmin, 1rem);
      border-bottom: 1px solid transparent;
      transition:
        border-color 0.2s ease,
        color 0.2s ease;
    }
    font-weight: 600;
    border-bottom: 1px solid transparent;
    transition:
      border-color 0.2s ease,
      color 0.2s ease;
  }

  .speaker-page__socials a:hover,
  .speaker-page__socials a:focus-visible {
    color: var(--light-orange);
    border-color: var(--light-orange);
    outline: none;
  }

  @media only screen and (max-width: 600px) {
    .book {
      height: 100vmin;
      width: 70vmin;
      left: 55%;
      transform: translate(-50%, -50%) scale(0.5);
    }

    .speaker-page__portrait img {
      width: clamp(110px, 24vmin, 170px);
      height: clamp(110px, 24vmin, 170px);
    }

    .cover-note {
      max-width: 24ch;
    }
  }
</style>
<script is:inline>
  // @ts-nocheck
  window.addEventListener("load", () => {
    const { gsap, ScrollTrigger } = window;

    if (!gsap || !ScrollTrigger) {
      console.error("GSAP or ScrollTrigger not loaded");
      return;
    }

    gsap.registerPlugin(ScrollTrigger);

    const segment = () => window.innerHeight * 0.35;

    gsap.to(".book", {
      scrollTrigger: {
        scrub: 1,
        start: () => 0,
        end: () => segment(),
      },
      scale: 0.88,
      x: "40%",
      duration: 0.5,
    });

    const pages = Array.from(document.querySelectorAll(".book__page"));
    console.log("Found pages:", pages.length);

    pages.forEach((page, index) => {
      gsap.set(page, { z: index === 0 ? 13 : -index });

      if (index === pages.length - 1) {
        return;
      }

      const start = () => (index + 1) * segment();
      const end = () => (index + 1.5) * segment();

      gsap.to(page, {
        rotateY: -180,
        scrollTrigger: {
          scrub: 1,
          start,
          end,
        },
      });

      gsap.to(page, {
        z: index === 0 ? -13 : index,
        scrollTrigger: {
          scrub: 1,
          start,
          end,
        },
      });
    });
  });
</script>
