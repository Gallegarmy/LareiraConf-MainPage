---
import Layout from "src/layouts/Layout.astro";
import HorizontalScroll from "@components/Parallax/HorizontalScroll";
import HomeSection from "@components/Home/HomeSection";
import TicketsSection from "@components/TicketsSection/TicketsSection";
---

<style is:global>
  body {
    overflow-x: hidden;
  }
  .panel {
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 4rem;
    position: relative;
    overflow: hidden;
    flex-shrink: 0;
  }
  .container {
    display: flex;
    width: 200%; /* 2 panels for now */
    height: 100vh;
  }
</style>

<Layout title="Lareira Conf 2026">
  <HorizontalScroll client:load className="container">
    <HomeSection />
    <TicketsSection client:load />
  </HorizontalScroll>
</Layout>
