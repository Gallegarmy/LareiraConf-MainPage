---
import Image from "astro/components/Image.astro";
import Linkedin from "@img/rrss/linkedin.svg";
import X from "@img/rrss/x.svg";

const { platform, username } = Astro.props;
const baseUrlIn = "https://www.linkedin.com/in/";
const baseUrlX = "https://x.com/";
const baseUrlInstagram = "https://www.instagram.com/";

const platformUrl = {
  linkedin: baseUrlIn,
  x: baseUrlX,
  instagram: baseUrlInstagram,
};

const baseUrl = platformUrl[platform];
---

<a
  href={`${baseUrl}${username}`}
  target="_blank"
  class="social-link leading-none"
>
  {
    platform === "linkedin" && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 30 30"
        width="1.5em"
        height="1.5em"
      >
        <path
          fill="currentColor"
          d="M24,4H6C4.895,4,4,4.895,4,6v18c0,1.105,0.895,2,2,2h18c1.105,0,2-0.895,2-2V6C26,4.895,25.105,4,24,4z M10.954,22h-2.95 v-9.492h2.95V22z M9.449,11.151c-0.951,0-1.72-0.771-1.72-1.72c0-0.949,0.77-1.719,1.72-1.719c0.948,0,1.719,0.771,1.719,1.719 C11.168,10.38,10.397,11.151,9.449,11.151z M22.004,22h-2.948v-4.616c0-1.101-0.02-2.517-1.533-2.517 c-1.535,0-1.771,1.199-1.771,2.437V22h-2.948v-9.492h2.83v1.297h0.04c0.394-0.746,1.356-1.533,2.791-1.533 c2.987,0,3.539,1.966,3.539,4.522V22z"
        />
      </svg>
    )
  }
  {
    platform === "x" && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="-2.5 -2.5 55 55"
        width="1.5em"
        height="1.5em"
        preserveAspectRatio="xMidYMid meet"
      >
        <path
          fill="currentColor"
          d="M 11 4 C 7.134 4 4 7.134 4 11 L 4 39 C 4 42.866 7.134 46 11 46 L 39 46 C 42.866 46 46 42.866 46 39 L 46 11 C 46 7.134 42.866 4 39 4 L 11 4 z M 13.085938 13 L 21.023438 13 L 26.660156 21.009766 L 33.5 13 L 36 13 L 27.789062 22.613281 L 37.914062 37 L 29.978516 37 L 23.4375 27.707031 L 15.5 37 L 13 37 L 22.308594 26.103516 L 13.085938 13 z M 16.914062 15 L 31.021484 35 L 34.085938 35 L 19.978516 15 L 16.914062 15 z"
        />
      </svg>
    )
  }

  {
    platform === "instagram" && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 30 30"
        width="1.5em"
        height="1.5em"
      >
        <path
          fill="currentColor"
          d="M 9.9980469 3 C 6.1390469 3 3 6.1419531 3 10.001953 L 3 20.001953 C 3 23.860953 6.1419531 27 10.001953 27 L 20.001953 27 C 23.860953 27 27 23.858047 27 19.998047 L 27 9.9980469 C 27 6.1390469 23.858047 3 19.998047 3 L 9.9980469 3 z M 22 7 C 22.552 7 23 7.448 23 8 C 23 8.552 22.552 9 22 9 C 21.448 9 21 8.552 21 8 C 21 7.448 21.448 7 22 7 z M 15 9 C 18.309 9 21 11.691 21 15 C 21 18.309 18.309 21 15 21 C 11.691 21 9 18.309 9 15 C 9 11.691 11.691 9 15 9 z M 15 11 A 4 4 0 0 0 11 15 A 4 4 0 0 0 15 19 A 4 4 0 0 0 19 15 A 4 4 0 0 0 15 11 z"
        />
      </svg>
    )
  }
</a>

<style>
  .social-link {
    color: var(--text-secondary);
    transition: fill 0.3s ease;
  }

  .social-link:hover {
    color: var(--accent);
  }
</style>
