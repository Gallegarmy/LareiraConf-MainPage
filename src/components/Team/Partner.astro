---
import Image from "astro/components/Image.astro";
import CorunaWTF from "@img/crew/corunawtf.svg";
import PartnerItem from "./PartnerItem.astro";
import Gpul from "@img/crew/gpul.svg";
import Python from "@img/crew/python.svg";
import Sysarmy from "@img/crew/sysarmy.svg";

const organization = [
  {
    name: "Sysarmy Galicia",
    logo: Sysarmy,
    url: "https://sysarmygalicia.com",
    tier: "coorganizador",
  },
  {
    name: "Gpul",
    logo: Gpul,
    url: "https://gpul.org/",
    tier: "coorganizador",
  },
];

const colaborators = [
  {
    name: "Coruña WTF",
    logo: CorunaWTF,
    url: "https://corunawtf.github.io/page",
    tier: "colaborador",
  },
  {
    name: "Python Coruña",
    logo: Python,
    url: "https://pythoncoruna.github.io/es/",
    tier: "colaborador",
  },
];
---

<div class="flex flex-col sm:flex-row gap-8 p-8 items-end justify-center">
  <PartnerItem title="Organizan" items={organization} />
  <PartnerItem title="Colaboran" items={colaborators} />
</div>

