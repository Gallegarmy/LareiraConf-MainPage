---
import Image from "astro/components/Image.astro";

const { items, title } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <div class="flex flex-row gap-2 items-end">
    {
      items.map((item) => (
        <a href={item.url} target="_blank" class="partner-item">
          <Image src={item.logo} alt={item.name} class="partner-image" />
          <h3 class="partner-name">{item.name}</h3>
        </a>
      ))
    }
  </div>
</div>

<style>
  .partner-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .partner-image {
    filter: grayscale(100%) drop-shadow(0px 0px 1px #fff);
    transition: all 0.3s;
  }

  .partner-image:hover {
    filter: grayscale(0%) drop-shadow(0px 0px 1px #fff);
  }

  .partner-name {
    font-size: small;
    text-wrap: nowrap;
  }
</style>
