  {
    name: "Sirviendo código",
    logo: "/archived-editions/2025/sponsors/sirviendocodigo.svg",
    url: "https://sirviendocodigo.com/",
    tier: SponsorTier.Vagalume,
  },
  {
    name: "Codely",
    logo: "/archived-editions/2025/sponsors/codely.svg",
