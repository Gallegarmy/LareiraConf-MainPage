    tier: SponsorTier.Lume,
  },
  {
    name: "Teimas",
    logo: "/archived-editions/2025/sponsors/teimas.svg",
    url: "https://www.teimas.com/",
    tier: SponsorTier.Brasa,
  },
  {
    name: "Tecdesoft",
    logo: "/archived-editions/2025/sponsors/tecdesoft.svg",
    url: "https://tecdesoft.es/",
